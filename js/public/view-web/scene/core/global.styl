//Columns
// ex .column-4 === width 25%
generate-column()
	for n, x in 1..12
		.column-{x}
			display inline-block
			vertical-align top
			width (100% / x)

// ex .column-5-3 === width 60% 
// ex .column-5-2 === width 40%
generate-column-fill()
	for n, x in 1..12
		for n, y in 1..x
			.column-{x}-{y}
				display inline-block
				vertical-align top
				width (100% / x) * y
				
// ex .column-5-offset-2
generate-column-offset()
	for n, x in 1..12
		for n, y in 1..x
			.column-{x}-offset-{y + 1}
				display inline-block
				vertical-align top
				margin-left (100% / x) * y
				width (100% / x)

generate-column()
generate-column-fill()
generate-column-offset()
		
//Forms

//Search
.search
	display inline-block
	width searchWidth
	margin buffer
	border 1px solid strokeColor
	&.right 
		float right
	input
		padding 0
		height (ribbonHeight / 2)
		display inline-block
		font-size 13px
		border 0
		width "calc(100% - %s)" % ((searchWidth / 8) * 2)
		&:focus
			outline none
			border 0
	.icon
		padding (buffer/4) 0 
		height (ribbonHeight / 2)
		display inline-block
		width (searchWidth / 8)

//inputs
input
	width 100%
	height ribbonHeight
	padding buffer
	border 1px solid strokeColor
	border-radius 0
	-webkit-appearance none
	&:focus
		outline none
		border 1px solid secondaryColor

input[type='checkbox']
	width auto
	margin-right buffer
	min-width 10px
	min-height 10px
	&:checked
		background #333
	
label.checkboxLabel
	color fontColorLight

//Typogrophy
h1
	font-size 17px
	margin 0
	
p
	font-size 13px
	margin 0
	&.secondaryText
		color fontColorLight

//Containers
.window
	position absolute
	overflow hidden
	width 100%
	height 100%
	
.container
	width 100%
	padding 0
	
.box
	background-color bgColorLight
	padding buffer * 2
	shadow()
		
//Lists
.list
	height "calc(100% - %s)" % ribbonHeight
	background bgColorDark
	
	ul
		margin 0
		padding 0
		border 1px solid strokeColor
		
		li
			list-style none
			height ribbonHeight
			line-height ribbonHeight
			clear both
			padding 0 buffer
			background bgColorDark
			border-bottom 1px solid strokeColor
			&:last-of-type
				border-bottom 0
			p
				height ribbonHeight
				line-height ribbonHeight
			&.selected
				-webkit-transform scale(1.05)
				-moz-transform scale(1.05)
				-ms-transform scale(1.05)
				transform scale(1.05)
				border 1px solid strokeColor!important
				background bgColor
						
				
//Icons
.icon
	text-align right
	display inline-block
	height ribbonHeight - 1
	padding buffer (buffer / 2)
	svg
		height 100%
		width 100%
		vertical-align top !important
	&.interactive
		cursor pointer
		&:hover
			svg
				fill primaryColor
		&:active
			svg
				fill primaryColor
	&.right
		float right
	&.left
		float left
	&.dim
		opacity 0.3
	&.online				
		svg
			fill primaryColor
				

