//Global Color vars
primaryColor = #85c696 
secondaryColor = #ff7b7b 
bgColor = #fff
bgColorDark = #f5f5f5
strokeColor = #dce0e0
fbColor = #4c69ba
radius = 3px
fontColor = #333333
fontColorLight = #888

searchWidth = 200px

buffer = 12px

border = 1px solid strokeColor

ribbonHeight = 50px

// Global styles

body 
	background bgColorDark
	*
		box-sizing border-box
		vertical-align top
		
.scroll
	overflow auto

//Global Mixins
shadow()
	-webkit-box-shadow 0px 1px 2px 0px rgba(0,0,0,0.2)
	-moz-box-shadow 0px 1px 2px 0px rgba(0,0,0,0.2)
	box-shadow 0px 1px 2px 0px rgba(0,0,0,0.2)

